# ServerPulse configuration
# Copy this to .env and fill in your values:
#   cp .env.example .env
#
# Or place at ~/.config/serverpulse/.env

# SSH connection (required)
SSH_HOST=
SSH_USER=root
SSH_KEY_PATH=~/.ssh/id_ed25519
SSH_PORT=22

# Process monitoring
# Number of top processes to show (default: 10)
PROCESS_COUNT=10
# Optional keyword filter (empty = top N by CPU)
PROCESS_FILTER=

# Docker container monitoring (default: disabled)
DOCKER_ENABLED=false

# Systemd service monitoring (comma-separated names, empty = disabled)
SYSTEMD_SERVICES=

# n8n API (optional -- section hides when unconfigured)
N8N_BASE_URL=
N8N_API_KEY=

# Terminal app for SSH button: "terminal" or "iterm" (default: terminal)
TERMINAL_APP=terminal

# Polling interval in seconds (default: 30)
POLL_INTERVAL=30
